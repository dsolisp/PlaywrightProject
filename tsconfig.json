{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@pages/*": ["src/pages/*"],
      "@locators/*": ["src/locators/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@test-data/*": ["test-data/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*", "tests/**/*", "playwright.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
