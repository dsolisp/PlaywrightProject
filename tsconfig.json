{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts",
    "e2e/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
