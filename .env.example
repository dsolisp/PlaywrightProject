# Copy to .env and tweak as needed. Everything has sensible defaults.

# ── URLs ──────────────────────────────────────────────────────────────
BASE_URL=https://www.bing.com
SAUCE_DEMO_URL=https://www.saucedemo.com
API_BASE_URL=https://jsonplaceholder.typicode.com

# ── Browser ───────────────────────────────────────────────────────────
BROWSER=chromium
HEADLESS=true
# SLOW_MO=0  # ms delay between actions, useful for debugging

# ── Timeouts (ms) ─────────────────────────────────────────────────────
# TIMEOUT=30000
# NAVIGATION_TIMEOUT=30000
# ACTION_TIMEOUT=10000
# EXPECT_TIMEOUT=5000

# ── Parallelism & Retries ─────────────────────────────────────────────
# PARALLEL_WORKERS=4
# RETRY_COUNT=2

# ── SauceDemo Creds ───────────────────────────────────────────────────
# SAUCE_USERNAME=standard_user
# SAUCE_PASSWORD=secret_sauce

# ── Database ──────────────────────────────────────────────────────────
# DATABASE_PATH=./test-data/chinook.db

# ── Artifacts on Failure ──────────────────────────────────────────────
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# ── Logging ───────────────────────────────────────────────────────────
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_SILENT=false  # set true to silence logs in unit tests

# ── Environment ───────────────────────────────────────────────────────
# CI=false
# ENV=dev

