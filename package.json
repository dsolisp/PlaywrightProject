{
  "name": "playwrightproject",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npx playwright test",
    "test:unit": "vitest run tests/unit/",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "playwright:update-snapshots": "npx playwright test --update-snapshots",
    "playwright:visual-live": "USE_LIVE=true npx playwright test src/tests/e2e/visual_live.e2e.spec.ts",
    "prepare": "husky install",
    "allure": "allure generate allure-results --clean && allure open allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=100",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/css": "^0.13.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.37.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.4",
    "pino": "^10.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.56.0",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3"
  }
}
