{
  "name": "playwrightproject",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run tests/unit/",
    "test:unit:watch": "vitest tests/unit/",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:sauce": "playwright test e2e/specs/sauce-demo/",
    "test:search": "playwright test e2e/specs/search-engine/",
    "test:api": "playwright test e2e/specs/api/",
    "test:a11y": "playwright test e2e/specs/accessibility/",
    "test:visual": "playwright test e2e/specs/visual/",
    "test:perf": "playwright test e2e/specs/performance/",
    "test:integration": "playwright test e2e/specs/integration/",
    "test:contract": "playwright test e2e/specs/contract/",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results --clean && allure open allure-report",
    "snapshots:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "clean": "rm -rf dist test-results allure-results allure-report playwright-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=100",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/css": "^0.13.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "axios": "^1.12.2",
    "eslint": "^9.37.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.4",
    "pino": "^10.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.56.0",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3"
  }
}
